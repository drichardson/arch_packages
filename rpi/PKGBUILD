# Maintainer: Doug Richardson <dougie.richardson@gmail.com>
pkgname=rpi
pkgver=0.0.3
pkgrel=1
pkgdesc="Raspberry Pi tool to make my workflow more efficient"
arch=(any)
url="https://github.com/drichardson/arch_packages"
license=('BSD')
depends=(python)
optdepends=()
backup=()
changelog=
install=
source=('rpi' 'rpi.1')
md5sums=('ee7252b1f362fe1cbc30c2de38892080'
         '0625bd28d19965a6c7d3b57d39342a87')

build() {
    cd "$srcdir"
    cat rpi.1 | gzip -c - > rpi.1.gz
}

package() {
  install -Dm755 "$srcdir"/rpi "$pkgdir"/usr/bin/rpi
  install -Dm644 "$srcdir"/rpi.1.gz "$pkgdir"/usr/local/man/man1/rpi.1.gz
}

