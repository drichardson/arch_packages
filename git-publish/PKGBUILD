pkgname=git-publish
pkgver=1.0.1
pkgrel=1
pkgdesc="Publish a git repository as a tarball"
arch=(any)
url="https://github.com/drichardson/arch_packages"
license=('BSD')
depends=(rsync git)
optdepends=()
backup=()
changelog=
install=
source=(git-publish)
sha256sums=('f390d5d02b135805e2cb8c1a1a783c204aab47fb1730b07c5a511a10e70fdfd1')

package() {
    cd "$srcdir"
    install -Dm755 git-publish "$pkgdir"/usr/bin/git-publish
}
